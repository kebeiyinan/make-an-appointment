<extend name="Admin@Public/base"/>
<block name="main-content">
	<div class="page-content">
		<!--主题-->
		<div class="page-header">
			<h1>
				您当前操作
				<small>
					<i class="ace-icon fa fa-angle-double-right"></i>
					添加预约
				</small>
			</h1>
		</div>
		<div class="row">
			<div class="col-xs-12">
			<link type="text/css" rel="stylesheet" href="__PUBLIC__/goodsattr/liandong.css">
			<link rel="stylesheet" type="text/css" media="all" href="__PUBLIC__/sldate/daterangepicker-bs3.css" />
				<form class="form-horizontal subscribeform" id="formz" name="form0" method="post" action="{:U('subscribeAdd')}"  enctype="multipart/form-data">
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">实验室： </label>
						<div class="col-sm-10">
							<select name="aboratory_id"  class="col-sm-3 selector" required="required">
								<option  >{$info.aboratory_id}</option>
							</select>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group">
						<label class="col-sm-2 control-label no-padding-right" for="form-field-1" required="required"> 指导老师：  </label>
						<div class="col-sm-10">
							<select name="subscribe_person"  class="col-sm-3 selector">
								<option >{$info.subscribe_person}</option>
							</select>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">周数： </label>
						<div class="checkbox col-sm-4">
							<span class="lbl">第{$info.number_of_weeks}周</span>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">星期：</label>
						<div class="col-sm-10">
							<select name="week"  class="col-sm-3 selector" required="required">
								<if condition="$info['week'] eq 1">
										<option value="1">星期一</option>
									<elseif condition="$info['week'] eq 2" />
										<option value="2">星期二</option>
									<elseif condition="$info['week'] eq 3" />	
										<option value="3">星期三</option>
									<elseif condition="$info['week'] eq 4" />
										<option value="4">星期四</option>
									<elseif condition="$info['week'] eq 5" />
										<option value="5">星期五</option>
									<elseif condition="$info['week'] eq 6" />
										<option value="6">星期六</option>
									<else/>
										<option value="0">星期日</option>	
								</if>
							</select>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group">
						<label class="col-sm-2 control-label no-padding-right" for="form-field-1"> 课时：  </label>
						<div class="checkbox col-sm-4">
							<foreach name="classhour_list" item="v">
								<label style="width:100px;">
									<span class="lbl" >{$v.classhour_name}</span>
								</label>
							</foreach>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">预约日期： </label>
						<div class="col-sm-10">
							<input type="text" name="contacts"   value="{$info.subscribe_time|date='Y-m-d',###}" class="col-xs-10 col-sm-3" required/>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">系部名称： </label>
						<div class="col-sm-10">
							<select name="department_id"  class="col-sm-3 selector" required="required">
								<option>{$info.department_id}</option>
							</select>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">预约人数： </label>
						<div class="col-sm-10">
							<input type="number"    value="{$info.person_num}" class="col-xs-10 col-sm-3" required readonly=""/>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">班级： </label>
						<div class="col-sm-10">
							<input type="text"   value="{$info.class}" class="col-xs-10 col-sm-3" required readonly=""/>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">专业： </label>
						<div class="col-sm-10">
							<input type="text"  value="{$info.major}" class="col-xs-10 col-sm-3" required readonly=""/>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">联系人： </label>
						<div class="col-sm-10">
							<input type="text" name="contacts"   value="{$info.contacts}" class="col-xs-10 col-sm-3" required readonly=""/>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">联系电话： </label>
						<div class="col-sm-10">
							<input type="tel" name="contacts_phone"  value="{$info.contacts_phone}" class="col-xs-10 col-sm-3" required readonly=""/>
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">实验项目： </label>
						<div class="col-sm-10">
							<input type="text"   value="{$info.project}"  class="col-xs-10 col-sm-3" required readonly=""/>
						</div>
					</div>
					<div class="form-group" id="cpprice">
						<label  class="col-sm-2 control-label no-padding-right" for="form-field-1">是否审核： </label>
						<div class="col-xs-10 col-sm-3">
							<span style="width:100px;margin-top: 20px;">
								<if condition="$info eq 1">
									待审核
								<elseif condition="$info eq 2"/>
									已通过
								<else/>
									已拒绝
								</if>								
							</span>
						</div>
					</div>
					<div class="clearfix form-actions">
						<div class="col-md-offset-3 col-md-9">
							<button class="btn btn-info" onClick="javascript :history.back(1);" type="reset">
								<i class="ace-icon fa fa-undo bigger-110"></i>
								返回
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div><!-- /.page-content -->
</block>
<block name="scripts">
	<script type="text/javascript" src="__PUBLIC__/goodsattr/js/liandong.js"></script>
</block>